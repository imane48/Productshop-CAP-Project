<mvc:View controllerName="productshop.webapp.controller.App"
    xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Page id="ProductsPageId" title="Products List">
        <content>
            <SearchField id="SearchFieldId" placeholder="Filter by category (Drinks ou Grocery)" search=".onFilter" width="98%" class="sapUiSmallMargin" />
            
            <Table id="productTable" items="{path: '/Products', parameters: { '$$updateGroupId': 'updateGroup' }}" mode="SingleSelectMaster" selectionChange=".onPress">
                <headerToolbar>
                    <OverflowToolbar id="ToolbarId">
                        <Title id="titleId" text="Products"/>
                        <ToolbarSpacer id="ToolbarSpacerId"/>
                        <Button id="buttonId" icon="sap-icon://add" text="Add" press=".onCreate" type="Emphasized"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="idColumnId"><Text id="idTextId" text="ID"/></Column>
                    <Column id="nameColumnId"><Text id="nameTextId" text="Name"/></Column>
                    <Column id="categoryColumnId"><Text id="categoryTextId" text="Category"/></Column>
                    <Column id="actionsColumnId" hAlign="Center"><Text id="actionsTextId" text="Actions"/></Column>
                </columns>
                <items>
                    <ColumnListItem id="columnListItemId">
                        <cells>
                            <Text id="idTextId1" text="{ID}" />
                            <Text id="_IDGenText1" text="{name}" />
                            <Text id="_IDGenText2" text="{category}" />
                            <HBox id="_IDGenHBox" width="70%" justifyContent="End">
                                <Button id="_IDGenButton6" icon="sap-icon://navigation-right-arrow" press=".onPress" class="sapUiTinyMarginEnd" />
                                <Button id="_IDGenButton2" icon="sap-icon://edit" type="Ghost" press=".onEdit" class="sapUiTinyMarginEnd" />
                                <Button id="_IDGenButton3" icon="sap-icon://delete" type="Reject" press=".onDelete" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
