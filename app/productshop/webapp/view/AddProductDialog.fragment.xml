<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog id="addDialog" title="Nouveau Produit">
        <content>
            <f:SimpleForm id="FormId" editable="true" layout="ResponsiveGridLayout">
                <f:content>
                    <Label id="_IDGenLabel1" text="Name" required="true" />
                    <Input id="inputTitle" placeholder="Ex: Coca-Cola" />

                    <Label id="_IDGenLabel2" text="category" required="true" />
                    <Select id="selectCategory">
                        <core:Item id="_IDGenItem" key="Drinks" text="Drinks" />
                        <core:Item id="_IDGenItem1" key="Grocery" text="Grocery" />
                    </Select>
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button id="_IDGenButton" text="Save" type="Emphasized" press=".onSaveProduct" />
        </beginButton>
        <endButton>
            <Button id="_IDGenButton1" text="Discard" press=".onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
